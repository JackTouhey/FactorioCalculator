<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FactorioCalculatorView.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <HorizontalStackLayout 
                Padding ="30,0"
                Spacing ="25"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Label Text="Crafting Speed:"
                    FontSize="30"/>
                <Entry x:Name="CraftSpeedInput"
                    Placeholder="Enter craft speed"></Entry>
            </HorizontalStackLayout>
            <HorizontalStackLayout
                Padding ="10,0"
                Spacing ="400"
                HorizontalOptions="Center">
                <Label Text="Input"
                    FontSize="25"/>
                <Label Text="Output"
                    FontSize="25"/>
                </HorizontalStackLayout>
            <HorizontalStackLayout
                Padding ="10,0"
                Spacing ="400"
                HorizontalOptions="Center">
                <VerticalStackLayout x:Name="InputItems">
                    <Button  Clicked="OnInputClicked" Text="+ Add Item"></Button>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="OutputItems">
                    <Button x:Name="AddOutput" Text="+ Add Item"></Button>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
